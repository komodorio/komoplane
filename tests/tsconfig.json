{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["jest", "node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["../pkg/frontend/src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../pkg/frontend/src/**/*.ts",
    "../pkg/frontend/src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "coverage",
    "dist"
  ]
}
